{
  "manifest_version": 3,
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "version": "0.0.3",
  "action": {
    "default_title": "__MSG_extensionName__",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "24": "images/icon24.png",
      "32": "images/icon32.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["storage"],
  "host_permissions": ["https://chat.openai.com/*","https://chatgpt.com/*","https://chat.com/*"],
  "background": {
    "scripts": ["background.js"],
    "service_worker": "background.js"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "mail@alikarakoc.com",
      "strict_min_version": "121.0"
    }
  },  
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*","https://chatgpt.com/*","https://chat.com/*"],
      "js": ["scripts/contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "images/statusOn.png",
        "images/statusOff.png",
        "css/textInput.css",
        "css/chatHistory.css",
        "css/messages.css",
        "css/hideMyInChatQuestions.css",
        "css/hideRepliesInChat.css"
      ],
      "matches": ["https://chat.openai.com/*","https://chatgpt.com/*","https://chat.com/*"]
    }
  ],
  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Alt+X"
      },
      "description": "Toggle On/Off"
    }
  }
}